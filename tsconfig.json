{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "**/__tests__"],
  "include": ["src/**/*"]
}
